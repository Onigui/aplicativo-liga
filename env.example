# ========================================
# CONFIGURAÇÕES LIGA DO BEM
# ========================================

# Ambiente
NODE_ENV=development

# Porta do servidor
PORT=3001

# ========================================
# BANCO DE DADOS
# ========================================

# URL do PostgreSQL (Render)
DATABASE_URL=postgresql://username:password@host:port/database

# ========================================
# AUTENTICAÇÃO
# ========================================

# Chave secreta para JWT (GERE UMA CHAVE FORTE!)
JWT_SECRET=sua_chave_secreta_muito_forte_aqui_2024

# Tempo de expiração do token (em segundos)
JWT_EXPIRES_IN=86400

# ========================================
# API CONFIGURAÇÕES
# ========================================

# URL base da API
REACT_APP_API_URL=http://localhost:3001

# CORS Origins (separados por vírgula)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ========================================
# EMAIL (OPCIONAL)
# ========================================

# Configurações SMTP para envio de emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-de-app

# ========================================
# PAGAMENTOS (OPCIONAL)
# ========================================

# Chaves de API para pagamentos
PIX_KEY=sua_chave_pix
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

# ========================================
# LOGS E DEBUG
# ========================================

# Nível de log
LOG_LEVEL=info

# Debug mode
DEBUG=false

# ========================================
# SEGURANÇA
# ========================================

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# MOBILE APP
# ========================================

# Capacitor config
CAPACITOR_SERVER_URL=http://localhost:3000

# ========================================
# PRODUÇÃO (RENDER)
# ========================================

# Para produção, estas variáveis serão definidas no Render
# NODE_ENV=production
# DATABASE_URL=sua_url_postgresql_render
# JWT_SECRET=sua_chave_secreta_producao 